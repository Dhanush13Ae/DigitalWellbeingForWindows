<Window x:Class="DigitalWellbeingUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True" 
        mc:Ignorable="d"
        Title="Digital Wellbeing" Height="450" Width="800">

    <Grid>
        <ui:NavigationView x:Name="NavView" SelectionChanged="NavView_SelectionChanged">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Tag="home" Icon="Home" Content="Home"/>
            </ui:NavigationView.MenuItems>

            <ScrollViewer>
                <Frame x:Name="ContentFrame" IsTabStop="True" NavigationUIVisibility="Hidden"/>
            </ScrollViewer>
        </ui:NavigationView>
    </Grid>
</Window>
